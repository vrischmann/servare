{% extends "base.html.j2" %}

{% block title %}Feeds{% endblock %}
{% block content -%}

<h1>Feeds</h1>

<nav class="feeds">
	<a href="/feeds/add">Add a feed</a>
	<form action="/feeds/refresh">
        <input type="submit" class="refresh" value="Refresh in the background" />
    </form>
</nav>

<div class="feed-listing">
	{% for feed in feeds %}
	<h2>{{ feed.title }}</h2>
	Link: <a href="{{ feed.url }}">{{ feed.url }}</a>
	{% endfor %}
</div>

{%- endblock %}
